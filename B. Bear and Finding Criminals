#include<bits/stdc++.h>
using namespace std;
void criminal(int n, int a, vector<int>& arr, int p){
    
    // int count =0;
    // if(arr[a]== 1){
    //     count++;
    // }

     int i,j;
    for ( i =a+1, j =a-1; i <=n && j >0; i++, j--){
        if(arr[i]+arr[j]==1){
            p--;
        }
    }
    
    cout<<p;
}
int main(){
    int n,a; cin>>n>>a;
    vector<int>arr(n+1);
    int p=0;
    for(int i=1;i<=n;i++){
        cin>>arr[i];
        p+=arr[i];
    }
    criminal(n,a,arr,p);

}
